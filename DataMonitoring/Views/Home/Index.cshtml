@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-12 col-lg-8 col-xxl-9 d-flex">
							<div class="card flex-fill">
								<div class="card-header">

									<h5 class="card-title mb-0">Products</h5>
								</div>
								<table class="table table-hover my-0" id="tblProduct">
									<thead>
										<tr>
											<th class="d-none d-xl-table-cell">#</th>
											<th class="d-none d-xl-table-cell">Name</th>
                                            <th class="d-none d-xl-table-cell">Category</th>
                                            <th class="d-none d-xl-table-cell">Quantity</th>
											<th class="d-none d-md-table-cell">Price</th>
										</tr>
									</thead>
									<tbody></tbody>
								</table>
							</div>
		</div>
        <div class="col-12 col-lg-4 col-xxl-3 d-flex">
							<div class="card flex-fill w-100">
								<div class="card-header">

									<h5 class="card-title mb-0">Products</h5>
								</div>
								<div class="card-body d-flex w-100">
									<div class="align-self-center chart chart-lg">
										<canvas id="canvasProudcts" height="600" width="400"></canvas>
									</div>
								</div>
							</div>
		</div>
        </div>
        <div class="row">
        <div class="col-12 col-lg-8 col-xxl-9 d-flex">
							<div class="card flex-fill">
								<div class="card-header">

									<h5 class="card-title mb-0">Sales</h5>
								</div>
								<table class="table table-hover my-0" id="tblSale">
									<thead>
										<tr>
											<th class="d-none d-xl-table-cell">#</th>
                                            <th class="d-none d-xl-table-cell">Customer</th>
                                            <th class="d-none d-xl-table-cell">Amount</th>
											<th class="d-none d-md-table-cell">Purshased On</th>
										</tr>
									</thead>
									<tbody></tbody>
								</table>
							</div>
		</div>
        <div class="col-12 col-lg-4 col-xxl-3 d-flex">
							<div class="card flex-fill w-100">
								<div class="card-header">

									<h5 class="card-title mb-0">Sales</h5>
								</div>
								<div class="card-body d-flex w-100">
									<div class="align-self-center chart chart-lg">
										<canvas id="canvasSales" height="500"></canvas>
									</div>
								</div>
							</div>
		</div>
        </div>
       
        <div class="row">
        <div class="col-12 col-lg-8 col-xxl-9 d-flex">
							<div class="card flex-fill">
								<div class="card-header">

									<h5 class="card-title mb-0">Products</h5>
								</div>
								<table class="table table-hover my-0" id="tblCustomer">
									<thead>
										<tr>
											<th class="d-none d-xl-table-cell">#</th>
											<th class="d-none d-xl-table-cell">Name</th>
                                            <th class="d-none d-xl-table-cell">Gender</th>
                                            <th class="d-none d-xl-table-cell">Mobile</th>
										</tr>
									</thead>
									<tbody></tbody>
								</table>
							</div>
		</div>
        <div class="col-12 col-lg-4 col-xxl-3 d-flex">
							<div class="card flex-fill w-100">
								<div class="card-header">

									<h5 class="card-title mb-0">Customers</h5>
								</div>
								<div class="card-body d-flex w-100">
									<div class="align-self-center chart chart-lg">
										<canvas id="canvasCustomers" height="400"></canvas>
									</div>
								</div>
							</div>
		</div>
        </div>
        <!---->
        
</div>

@section Scripts{
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.js" integrity="sha512-Lii3WMtgA0C0qmmkdCpsG0Gjr6M0ajRyQRQSbTF6BsrVh/nhZdHpVZ76iMIPvQwz1eoXC3DmAg9K51qT5/dEVg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="~/js/dashboard.js"></script>
}